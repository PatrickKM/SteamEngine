@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Palanquin:400,700|Titillium+Web&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Steam Engine</title>
</head>

<body>
    <div class="grid-container">
        <div class="item1">
            <header>
                <h1>Steam Engine</h1>
            </header>
        </div>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="logo" /></a>
        </div>
        <form method="post" asp-controller="RandomGame" asp-action="Index">
            <div>
                <input type="text" placeholder="Steam 64ID" name="Steam64Id" />
                <br/>
            </div>
            <div>
                <input class="button" type="submit" value="Submit" />
            </div>
        </form>
        <div class="item3">
            <section id="gameRoot"></section>
        </div>
        <div class="item4">
            <footer>
                <p>Copyright Steam Engine</p>
            </footer>
        </div>
    </div>
    <script src="~/js/scripts.js"></script>
</body>
</html>
