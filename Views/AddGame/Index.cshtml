@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Add Custom Game</title>
    <link href="https://fonts.googleapis.com/css?family=Palanquin:400,700|Titillium+Web&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <section id="game-container" class="grid-container">
        <section class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="logo" /></a>
        </section>

        <section class="item1">
            <header>
                <h1>Steam Engine</h1>
            </header>
        </section>

        <!--Add Custom Game Section-->
        <section class="item1">
            <h3 class="game-title">@ViewData["Name"]</h3>
            <img src="@ViewData["AppId"]" class="game-poster" />
            <p>@ViewData["Description"]</p>
        </section>

        <section class="item3">
            <form method="post" asp-controller="AddGame" asp-action="Index">
                <section>
                    <input type="text" placeholder="Steam AppId" name="AppId" />
                    <br />
                </section>
                <section>
                    <input type="text" placeholder="Name" name="Name" />
                    <br />
                </section>
                <section>
                    <input type="text" placeholder="Description" name="Description" />
                    <br />
                </section>
                <section>
                    <input class="button" type="submit" value="Add game" />
                </section>
            </form>
        </section>
    </section>
</body>
</html>
